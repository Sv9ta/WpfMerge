<Window x:Name="FinishFileWindow1" x:Class="WpfMerge.FinishFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="FinishFileWindow" Height="700" Width="650" Background="#FF56585A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="lblFileStatus" Grid.Row="0" Background="#FF939699" FontFamily="Verdana" FontSize="14" />
        <RichTextBox x:Name="rtb" Grid.Row="1" Margin="4,4,4,4" BorderBrush="#FF404244" BorderThickness="1"/>

        <StackPanel Orientation="Horizontal" Background="#FFBEC0C1" Grid.Row="2" FlowDirection="RightToLeft">
            <Button x:Name="buttonCancel" Margin="35,10,5,10"  Content="Отменить" Width="70" Height="25" Click="buttonCancel_Click" />
            <Button x:Name="buttonSave" Margin="10,10,10,10"  Content="Сохранить" Width="70" Height="25" Click="buttonSave_Click" />
        </StackPanel>
    </Grid>
</Window>
